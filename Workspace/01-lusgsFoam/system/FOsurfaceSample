surface
{
    type            surfaces;
    libs            (sampling);
    writeControl    writeTime;

    surfaceFormat   raw;
    fields          (total(p)_coeff yPlus p rho T);

    // interpolationScheme cellPoint;  //<- default

    surfaces
    {
        Blade
        {
            type            patch;
            patches         (Blade);
            interpolate     true;
            invariant       true;  // Unaffected by mesh motion
            surfaceFormat   raw;
        }
    }
}
