application     hisa;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         0.0004;

deltaT          0.00001;

writeControl    adjustableRunTime;

writeInterval   0.00002;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;

adjustTimeStep  yes;

maxCo           1;

maxDeltaT       1;


